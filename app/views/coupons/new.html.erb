<style>
.div-setting{
   width: 53%;
   margin-left: 18%;
}
</style>

<div class="alert alert-success page-header div-setting" >
	<h4>Add Coupons</h4>
</div>
<div class="well div-setting">
	<h5>Import Coupons</h5>
	<%= form_tag import_coupons_path, multipart: true do %>
	  <%= file_field_tag :file, :value=>"Upload CSV" %>
	  <%= submit_tag "Import", :class=>"btn btn-primary" %>
	<% end %>
</div>
<div class="well div-setting">
	<h5>Delete Unassigned Coupon</h5>
	<%= link_to "Destroy Coupons", remove_coupons_path, :class=>"btn btn-primary"%>

	<%#= link_to "Destroy Coupons", remove_coupons_path, :class=>"btn btn-primary",:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }%>
</div>